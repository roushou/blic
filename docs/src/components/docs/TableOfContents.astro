---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filter to only show h2 and h3
const tocHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{tocHeadings.length > 0 && (
  <nav class="text-sm">
    <h4 class="text-xs font-bold text-neon-blue uppercase tracking-wider mb-4">
      On this page
    </h4>
    <ul class="space-y-2">
      {tocHeadings.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class:list={[
              "toc-link block text-gray-400 hover:text-neon-pink transition-colors",
              heading.depth === 3 && "pl-3 text-xs",
            ]}
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
